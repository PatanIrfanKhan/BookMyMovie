<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5level [%t] %c - %msg%n"/>
        </Console>

        <SplunkHttp name="springbootlogs"
                    url="http://localhost:8088/services/collector/event"
                    token="25a06551-ea93-4b1a-8df5-648af6df6f3d"
                    index="spring_logs_dev"
                    source="BookMyMovieApp"
                    sourcetype="log4j"
                    disableCertificateValidation="true">
            <PatternLayout pattern="%d %-5level [%t] %c - %msg%n"/>
        </SplunkHttp>

    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="springbootlogs"/>
        </Root>
    </Loggers>

</Configuration>
